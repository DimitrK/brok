{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LogEvent",
  "type": "object",
  "required": [
    "ts",
    "level",
    "service",
    "env",
    "event",
    "component",
    "correlation_id",
    "request_id"
  ],
  "properties": {
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "level": {
      "type": "string",
      "enum": ["debug", "info", "warn", "error", "fatal"]
    },
    "service": {
      "type": "string",
      "minLength": 1
    },
    "env": {
      "type": "string",
      "minLength": 1
    },
    "event": {
      "type": "string",
      "minLength": 1
    },
    "component": {
      "type": "string",
      "minLength": 1
    },
    "message": {
      "type": "string",
      "minLength": 1
    },
    "correlation_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "request_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "tenant_id": {
      "type": "string",
      "minLength": 1
    },
    "workload_id": {
      "type": "string",
      "minLength": 1
    },
    "integration_id": {
      "type": "string",
      "minLength": 1
    },
    "reason_code": {
      "type": "string",
      "minLength": 1
    },
    "duration_ms": {
      "type": "integer",
      "minimum": 0
    },
    "status_code": {
      "type": "integer",
      "minimum": 100,
      "maximum": 599
    },
    "route": {
      "type": "string",
      "minLength": 1
    },
    "method": {
      "type": "string",
      "minLength": 1
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
