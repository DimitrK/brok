{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://broker.example/schemas/policy-constraints.schema.json",
  "title": "PolicyConstraints",
  "type": "object",
  "properties": {
    "recipient_allowlist": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "email",
        "maxLength": 320
      },
      "maxItems": 128,
      "uniqueItems": true
    },
    "recipient_domain_allowlist": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 253,
        "pattern": "^[A-Za-z0-9.-]+$"
      },
      "maxItems": 128,
      "uniqueItems": true
    },
    "require_mfa_approval": {
      "type": "boolean"
    },
    "max_body_bytes": {
      "type": "integer",
      "minimum": 0,
      "maximum": 10485760
    },
    "allowed_query_keys": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 64,
        "pattern": "^[A-Za-z0-9._-]+$"
      },
      "maxItems": 64,
      "uniqueItems": true
    }
  },
  "additionalProperties": false
}
