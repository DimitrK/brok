{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {"dependsOn": ["^build"], "outputs": ["dist/**"]},
    "test": {"dependsOn": ["^build"]},
    "test:coverage": {"dependsOn": ["^build"], "outputs": ["coverage/**"]},
    "lint": {},
    "typecheck": {},
    "dev": {"cache": false, "persistent": true}
  }
}
