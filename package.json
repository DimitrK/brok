{
  "private": true,
  "name": "broker-interceptor",
  "packageManager": "pnpm@9.15.9",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "typecheck": "turbo run typecheck",
    "infra:up": "./scripts/infra-up.sh --migrate",
    "infra:up:tools": "./scripts/infra-up.sh --migrate --tools",
    "infra:up:apps": "./scripts/infra-up.sh --migrate --apps",
    "infra:up:apps:tools": "./scripts/infra-up.sh --migrate --apps --tools",
    "infra:up:apps:vault": "./scripts/infra-up.sh --migrate --apps --vault",
    "infra:smoke": "./scripts/infra-smoke.sh",
    "infra:down": "./scripts/infra-down.sh",
    "infra:down:volumes": "./scripts/infra-down.sh --volumes",
    "infra:prod:config": "docker compose --env-file .env.production -f docker-compose.production.yml config",
    "infra:prod:config:example": "docker compose --env-file .env.production.example -f docker-compose.production.yml config",
    "infra:prod:up": "docker compose --env-file .env.production -f docker-compose.production.yml up -d",
    "infra:prod:down": "docker compose --env-file .env.production -f docker-compose.production.yml down --remove-orphans",
    "docker:build:broker-admin-api": "docker build -f apps/broker-admin-api/Dockerfile -t broker-admin-api:local .",
    "docker:build:broker-api": "docker build -f apps/broker-api/Dockerfile -t broker-api:local .",
    "db:migrate": "pnpm --filter @broker-interceptor/db prisma migrate deploy --schema ./prisma/schema.prisma",
    "db:migrate:dev": "pnpm --filter @broker-interceptor/db prisma migrate dev --schema ./prisma/schema.prisma",
    "db:studio": "pnpm --filter @broker-interceptor/db prisma studio --schema ./prisma/schema.prisma"
  },
  "prettier": "@broker-interceptor/prettier-config",
  "devDependencies": {
    "@broker-interceptor/eslint-config": "workspace:*",
    "@broker-interceptor/prettier-config": "workspace:*",
    "@eslint/js": "^9.0.0",
    "@types/node": "^25.2.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.3.3",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
